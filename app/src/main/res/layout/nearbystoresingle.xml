<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/llayout"
        android:elevation="15dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gridIconne"
            android:layout_width="match_parent"
            android:layout_height="182dp"
            android:layout_gravity="center"
            android:background="@color/white"

            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--            <RatingBar-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:clickable="false"-->
        <!--                android:rating="0.0"-->
        <!--                android:layout_gravity="left"-->
        <!--                android:isIndicator="true"-->
        <!--                style="?android:attr/ratingBarStyleSmall"-->
        <!--                android:layout_marginBottom="4dp"-->
        <!--                android:layout_marginTop="2dp"-->
        <!--                android:progressTint="@color/yellow"-->
        <!--                android:id="@+id/rateing"-->
        <!--                />-->

        <TextView
            android:id="@+id/titlene"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center|start"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/minn" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="51dp" />

        <!--        <ImageView-->
        <!--            android:id="@+id/imageView12"-->
        <!--            android:layout_width="16dp"-->
        <!--            android:layout_height="16dp"-->
        <!--            android:layout_gravity="center_vertical"-->
        <!--            android:layout_marginStart="16dp"-->
        <!--            android:layout_marginBottom="12dp"-->
        <!--            android:background="#66FFFFFF"-->
        <!--            android:src="@drawable/pickup_3x"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/gridIconne"-->
        <!--            app:layout_constraintStart_toStartOf="parent" />-->

        <TextView
            android:id="@+id/kmne"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center"
            android:text="7km"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/gridIconne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/gridIconne"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/min"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center"
            android:text="45min"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="@+id/gridIconne"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/offerrs"
            android:layout_width="115dp"
            android:layout_height="33dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/offerbackground"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center"
            android:text="₹50"
            android:textColor="@color/white"

            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@color/matgreen"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center"
            android:maxWidth="40dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="★ 0.0"
            android:textColor="@color/white"
            android:textSize="11dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        <TextView
            android:id="@+id/addressne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center|start"
            android:maxLines="2"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:text="address"
            android:textSize="11dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titlene" />


        <TextView
            android:id="@+id/notaccepting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center|start"
            android:maxLines="2"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="Currently Not Accepting Orders"
            android:textColor="#ed1c24"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addressne"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:padding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/gridIconne" />

        <TextView
            android:id="@+id/minn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="@font/segoeuibold"
            android:text="minimum order : "
            android:textSize="9dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridIconne" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>