            app:layout_constraintBottom_toTopOf="@+id/rateingg"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/inactive"
            app:layout_constraintTop_toTopOf="parent" />


        <RatingBar
