            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:fontFamily="@font/segoeuibold"
            android:layout_marginTop="4dp"
            android:text="333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ordertitle"
            app:layout_constraintTop_toBottomOf="@+id/oreritemsttl" />

        <TextView
            android:id="@+id/ordertitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:layout_marginTop="10dp"
            android:text="ORDERED ON"
            android:textColor="@color/darkblue"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="@+id/pay"
            app:layout_constraintTop_toBottomOf="@+id/pay" />

        <TextView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:fontFamily="@font/segoeui"
            android:text="order time"
            android:layout_marginTop="4dp"

            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/ordertitle"
            app:layout_constraintStart_toStartOf="@+id/ordertitle"
            app:layout_constraintTop_toBottomOf="@+id/ordertitle" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.70" />

        <TextView
            android:id="@+id/oreritemsttl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="ITEMS"
            android:textColor="@color/darkblue"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/pay" />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuibold"
            android:text="sad"
            android:textSize="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="120dp" />



        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuibold"
            android:paddingLeft="6dp"
            android:layout_marginTop="8dp"
            android:background="#bdc1e1"
            android:text=""
            android:textSize="11dp"
            android:paddingRight="6dp"
            android:textAllCaps="true"
            android:textColor="#2b3994"
            app:layout_constraintStart_toStartOf="@+id/title2"
            app:layout_constraintTop_toBottomOf="@+id/title2" />

        <TextView
            android:id="@+id/amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuibold"
            android:text="asd"
            android:layout_marginRight="4dp"
            android:textColor="@color/darkblue"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title2" />

        <!--Progress Bar created-->

            <com.kofigyan.stateprogressbar.StateProgressBar
                android:id="@+id/stateprogress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                app:spb_checkStateCompleted="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgicon"
                app:spb_animateToCurrentProgressState="true"
                app:spb_currentStateDescriptionColor="@color/yellow"
                app:spb_currentStateNumber="one"
                app:spb_maxStateNumber="four"
                app:spb_stateBackgroundColor="#BDBDBD"
                app:spb_stateDescriptionColor="#808080"
                app:spb_stateForegroundColor="@color/yellow"
                app:spb_stateNumberBackgroundColor="#808080"
                app:spb_stateNumberForegroundColor="#eeeeee" />

