<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="27dp"
                android:layout_marginTop="27dp"
                android:layout_marginEnd="369dp"
                android:src="@drawable/new_back_left_arrow" />

            <ImageView
                android:layout_width="271dp"
                android:layout_height="197dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="66dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="66dp"
                android:isScrollContainer="false"
                android:src="@drawable/ellocart_new" />

            <LinearLayout
                android:id="@+id/lay"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="490dp"
                android:background="@drawable/card_bg"
                android:orientation="vertical">


                <com.goodiebag.pinview.Pinview
                    android:id="@+id/otpNumberOne"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/black"
                    android:gravity="center"
                    android:paddingBottom="0dp"
                    android:textStyle="bold"
                    app:cursorVisible="true"
                    app:forceKeyboard="false"
                    app:hint="0"
                    app:inputType="number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:password="false"
                    app:pinBackground="@drawable/bgcard"
                    app:pinHeight="50dp"
                    app:pinLength="4"
                    app:pinWidth="50dp"
                    app:textSize="13dp">

                </com.goodiebag.pinview.Pinview>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sectextview"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center"
                        android:text="Enter 4 Digit code sent to your Registered Mobile Number"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/resend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/OTP"
                        android:textColor="@color/red"
                        android:textSize="12dp"
                        android:textStyle="bold" />


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="70dp"
                    android:padding="3dp"
                    app:cardBackgroundColor="@color/purple_200"
                    app:cardCornerRadius="5dp"
                    app:cardUseCompatPadding="true">


                    <TextView
                        android:id="@+id/continue4"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="15dp"
                        android:paddingTop="15dp"
                        android:text="VERIFY &amp; CONTINUE"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>