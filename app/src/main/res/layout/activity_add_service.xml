<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".servicesscreens.AddService">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userimg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="137dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="114dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/placeholderello" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cam"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/userimg"
            android:layout_alignEnd="@+id/userimg"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="83dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/camera_icon" />

    </RelativeLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textSize="13dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="20dp"
            android:text="Post Title"
            android:fontFamily="@font/segoeuibold"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/posttitle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bgedittext"
            android:drawablePadding="10dp"
            android:fontFamily="@font/segoeui"
            android:hint="Post Title"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10px"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textSize="13dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="20dp"
            android:text="Experience"
            android:fontFamily="@font/segoeuibold"
            android:textColor="@color/black"
            />

        <Spinner
            android:id="@+id/experience"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/bgedittext"
            android:drawablePadding="10dp"
            android:fontFamily="@font/segoeui"
            android:hint="Experience"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10px"
            android:textColor="@color/black"
            android:textColorHint="@color/gray"
            android:textSize="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textSize="13dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:text="Post Address"
            android:fontFamily="@font/segoeuibold"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="90dp"

            android:background="@color/bgedittext"
            android:gravity="start"
            android:hint="Post Address"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:textSize="13dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="10dp"
            android:text="Description"
            android:fontFamily="@font/segoeuibold"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@color/bgedittext"
            android:gravity="start"
            android:hint="Description"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />


        <Button
            android:id="@+id/submitbtn"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btncornor"
            android:padding="5dp"
            android:text="Add Post"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editText"
            app:layout_constraintVertical_bias="0.15" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>