                android:layout_margin="8dp"
                android:layout_weight="0.80"
                android:ellipsize="end"
                android:fontFamily="@font/segoeuibold"
                android:maxLines="2"
                android:text="Schedule Delivery Date"
                android:textColor="#000000"
                android:textSize="15dp" />

