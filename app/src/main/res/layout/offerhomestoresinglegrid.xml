<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="6dp"
    app:cardCornerRadius="10dp"
    card_view:cardUseCompatPadding="true"
    android:elevation="10dp"

    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/llayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:background="@color/white"

        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/radius"
        android:elevation="15dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        card_view:layout_editor_absoluteX="10dp">


        <!--            <RatingBar-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:clickable="false"-->
        <!--                android:rating="0.0"-->
        <!--                android:layout_gravity="left"-->
        <!--                android:isIndicator="true"-->
        <!--                style="?android:attr/ratingBarStyleSmall"-->
        <!--                android:layout_marginBottom="4dp"-->
        <!--                android:layout_marginTop="2dp"-->
        <!--                android:progressTint="@color/yellow"-->
        <!--                android:id="@+id/rateing"-->
        <!--                />-->
        <TextView
            android:id="@+id/txtviewoffer"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="3dp"
            android:background="@drawable/borderbottom"
            android:backgroundTint="@color/white"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center"
            android:maxLines="1"
            android:padding="2dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/yellow"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view5"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txtviewoffer"
            app:layout_constraintTop_toBottomOf="@+id/txtviewoffer" />

        <TextView
            android:id="@+id/txtview"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_below="@+id/txtviewoffer"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:backgroundTint="@color/white"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center"
            android:maxLines="2"
            android:padding="2dp"
            android:paddingTop="5dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view5" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
