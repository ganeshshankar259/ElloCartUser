<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_margin="2dp"
    android:orientation="vertical"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    card_view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="10dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/llayout"
        android:elevation="15dp"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gridIconne"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!--            <RatingBar-->
        <!--                android:layout_width="wrap_content"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:clickable="false"-->
        <!--                android:rating="0.0"-->
        <!--                android:layout_gravity="left"-->
        <!--                android:isIndicator="true"-->
        <!--                style="?android:attr/ratingBarStyleSmall"-->
        <!--                android:layout_marginBottom="4dp"-->
        <!--                android:layout_marginTop="2dp"-->
        <!--                android:progressTint="@color/yellow"-->
        <!--                android:id="@+id/rateing"-->
        <!--                />-->

        <TextView
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center|start"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.571"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotel_type" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.80052495" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.70" />


        <!--        <ImageView-->
        <!--            android:id="@+id/imageView12"-->
        <!--            android:layout_width="16dp"-->
        <!--            android:layout_height="16dp"-->
        <!--            android:layout_gravity="center_vertical"-->
        <!--            android:layout_marginStart="16dp"-->
        <!--            android:layout_marginBottom="12dp"-->
        <!--            android:background="#66FFFFFF"-->
        <!--            android:src="@drawable/pickup_3x"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/gridIconne"-->
        <!--            app:layout_constraintStart_toStartOf="parent" />-->

        <Button
            android:id="@+id/btn"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:textSize="12dp"
            android:layout_marginRight="4dp"
            android:background="@drawable/btncornorcod"
            android:fontFamily="@font/segoeuibold"
            android:text="View"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline6"
            app:layout_constraintTop_toBottomOf="@+id/place" />

        <TextView
            android:id="@+id/rating"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:background="@color/matgreen"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center"
            android:maxWidth="40dp"
            android:padding="5dp"
            android:text="â˜… 0.0"
            android:textColor="@color/white"
            android:textSize="11dp"
            app:layout_constraintBottom_toTopOf="@+id/btnlogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/gridIconne" />

        <TextView
            android:id="@+id/place"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center|start"
            android:maxLines="2"
            android:paddingTop="2dp"
            android:paddingBottom="3dp"
            android:text="address"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="2dp"
            android:text="Amount"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="@font/segoeuibold"

            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/place" />


        <TextView
            android:id="@+id/amount_strick"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/segoeuibold"
            android:text="Amount"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/amount"
            app:layout_constraintStart_toEndOf="@+id/amount"
            app:layout_constraintTop_toBottomOf="@+id/place" />


        <TextView
            android:id="@+id/percentage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center|start"
            android:maxLines="2"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:text="00"
            android:textColor="#ed1c24"
            android:textSize="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/amount_strick"
            app:layout_constraintStart_toEndOf="@+id/amount_strick"
            app:layout_constraintTop_toBottomOf="@+id/place" />

        <TextView
            android:id="@+id/des"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center|start"
            android:maxLines="2"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnlogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amount" />

        <TextView
            android:id="@+id/hotel_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:fontFamily="@font/segoeuibold"
            android:text=""
            android:textSize="11dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gridIconne" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>