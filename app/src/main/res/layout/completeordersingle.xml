<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:elevation="10dp"
    app:cardCornerRadius="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        >

        <ImageView
            android:id="@+id/imgicon"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="No title"
            android:textColor="@color/darkblue"
            android:textSize="15dp"
            app:layout_constraintEnd_toStartOf="@+id/amt"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/imgicon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuibold"
            android:text="asd"
            android:layout_marginRight="4dp"
            android:textColor="@color/darkblue"
            android:textSize="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/title2" />

        <TextView
            android:id="@+id/ordertitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="ORDERED ON "
            android:textColor="@color/darkblue"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline55"
            app:layout_constraintStart_toEndOf="@+id/imgicon"
            app:layout_constraintTop_toBottomOf="@+id/pay" />

        <TextView
            android:id="@+id/order"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/segoeui"
            android:text="order time"

            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/ordertitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ordertitle"
            app:layout_constraintTop_toBottomOf="@+id/ordertitle" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline55"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.70" />


        <TextView
            android:id="@+id/oreritemsttl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/segoeuibold"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="ITEMS"
            android:textColor="@color/darkblue"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline55"
            app:layout_constraintTop_toBottomOf="@+id/pay" />

        <TextView
            android:id="@+id/pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/segoeuibold"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textAllCaps="true"
            android:layout_marginLeft="5dp"

            android:layout_marginTop="8dp"
            android:background="#bdc1e1"
            android:text=""
            android:textSize="11dp"
            android:textColor="#2b3994"
            app:layout_constraintStart_toStartOf="@+id/title2"
            app:layout_constraintTop_toBottomOf="@+id/title2" />



        <TextView
            android:id="@+id/phonenumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:fontFamily="@font/segoeuibold"
            android:layout_marginTop="4dp"
            android:text="333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ordertitle"
            app:layout_constraintTop_toBottomOf="@+id/oreritemsttl" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="24dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone"
            android:clickable="true"
            android:fontFamily="@font/segoeuibold"
            app:layout_constraintBottom_toTopOf="@+id/order"
            app:layout_constraintStart_toEndOf="@+id/imgicon"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:srcCompat="@drawable/phone_3x" />

        <TextView
            android:id="@+id/phnnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="52dp"
            android:clickable="true"
            android:visibility="gone"
            android:fontFamily="@font/segoeuibold"
            android:text="phnnumber"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toTopOf="parent" />




        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oreritemsttl"
            app:srcCompat="@drawable/ic_arrow_right" />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/segoeuibold"
            android:visibility="invisible"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.053"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/order" />


