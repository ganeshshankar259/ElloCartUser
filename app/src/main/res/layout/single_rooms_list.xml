        <!--                android:text="Tajmahal"-->
        <!--                android:textSize="25dp"-->
        <!--                android:textStyle="bold" />-->
        <!--        </androidx.cardview.widget.CardView>-->
    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rla1">

        <TextView
            android:id="@+id/roomtype"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Single Rooms"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/roomtype_time"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:text="12 Hours Avilable"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomtype" />

        <TextView
            android:id="@+id/members"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:text="Members : "
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/roomtype_time"
            app:layout_constraintTop_toBottomOf="@id/roomtype" />
        <TextView
            android:id="@+id/tot_members"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="2dp"
            android:text="3"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"

            app:layout_constraintStart_toEndOf="@id/members"
            app:layout_constraintTop_toBottomOf="@id/roomtype" />
        <TextView
            android:id="@+id/roomtype_availrooms"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:text="Avilable Rooms :"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomtype_time" />
        <TextView
            android:id="@+id/tot_avialrooms"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:text="10"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/roomtype_availrooms"
            app:layout_constraintTop_toBottomOf="@id/roomtype_time" />
        <TextView
            android:id="@+id/roomtype_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginEnd="255dp"
            android:text="$ 2000"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/roomtype_availrooms" />
        <androidx.cardview.widget.CardView
            android:id="@+id/cardView5"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:layout_marginLeft="100dp"
            android:orientation="vertical"
            app:cardCornerRadius="25dp"
            app:cardElevation="5dp"
            card_view:cardBackgroundColor="@android:color/transparent"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/roomtype_price"
            app:layout_constraintTop_toBottomOf="@id/roomtype_availrooms">
            <Button
                android:id="@+id/btn_checkvail"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:text="Check Avilability"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold"
                android:background="@color/yellow"
                />
        </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>